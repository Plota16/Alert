<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_margin="30dp"
            android:text="Zaloguj się"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_email"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:hint="Hasło">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login_password" android:inputType="textPassword"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Zaloguj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/login_login"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@color/colorPrimary"
            android:backgroundTint="@color/colorPrimary"/>
    <Button
            android:layout_marginTop="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:text="Zarejestruj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/login_register"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"/>

    <com.facebook.login.widget.LoginButton
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            facebook:com_facebook_login_text="Zaloguj przez facebooka"
            android:layout_height="30dp"
            android:layout_width="wrap_content"
            android:id="@+id/face_login_button"
            android:layout_gravity="center_horizontal"
            android:layout_margin="50dp"/>
</LinearLayout>